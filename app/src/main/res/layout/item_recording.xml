<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="@dimen/defaultSingleListItemSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvRecordFileName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            style="@style/tvHeaderStyle"
            tools:text="기본 연습내용.mp4"
            />
        
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvFileLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRecordFileName"
            style="@style/tvContentStyle"
            tools:text="00:00"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lines="2"
            android:layout_alignParentRight="true"
            style="@style/tvContentStyle"
            tools:text="2018.03.20\n12:04:01"/>
        
    </RelativeLayout>
</android.support.v7.widget.CardView>